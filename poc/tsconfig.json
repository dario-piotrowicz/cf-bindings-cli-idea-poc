{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022"],
		"types": ["node"],
		"declaration": true,

		"moduleResolution": "node",
		"resolveJsonModule": true,
		"checkJs": false,
		"verbatimModuleSyntax": false,

		"skipLibCheck": true,
		"exactOptionalPropertyTypes": false,
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
